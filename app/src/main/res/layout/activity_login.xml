<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Here is the code for Phone number Field -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneEtL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="8dp"
            android:hint="Enter Mobile No."
            app:counterEnabled="true"

            app:counterMaxLength="10"
            app:endIconMode="custom"
            app:errorEnabled="true"
            app:prefixText="+91"

            app:startIconDrawable="@drawable/ic_telephone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:defaultFocusHighlightEnabled="false"
                android:inputType="number|textNoSuggestions"
                android:maxLength="10"
                android:textCursorDrawable="@drawable/cursor_style"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--Here is the code for password field-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordEtL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Enter Password"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/ic_password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:defaultFocusHighlightEnabled="false"
                android:inputType="textPassword"
                android:maxLength="100"
                android:textCursorDrawable="@drawable/cursor_style"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/loginTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_textview"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="LOG IN"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forgotTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_textview_thin"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:text="Forgot Password?"
            android:textAlignment="textEnd"
            android:textColor="#4fa5d5" />

        <TextView

            android:id="@+id/goSignupTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_textview_thin"
            android:padding="5dp"
            android:text="Don't Have an Account? Signup Now"
            android:textAlignment="center"
            android:textColor="#4fa5d5"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>