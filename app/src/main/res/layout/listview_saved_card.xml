<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rvtv_imageview"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_mastercard" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvrv_cardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UCO Bank Debit Card" />

                <TextView
                    android:id="@+id/tvrv_cardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xxxx xxxx xxxx 2345" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvrv_expires"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="Expires\n12/25" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>