<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_RewardScratch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.cooltechworks.views.ScratchImageView
            android:id="@+id/iv_scratch_alert"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/reward_trophy" />

        <TextView
            android:id="@+id/tv_amount_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="Congratulations\nYou won â‚¹200"
            android:textColor="#2979FF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iv_close_alert"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            app:srcCompat="@drawable/ic_check_mark" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>