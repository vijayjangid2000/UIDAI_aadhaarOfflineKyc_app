<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Help_support_fragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_website"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_website"
                app:tint="#448AFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:text="WEBSITE"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_websiteData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.openinnovations.com"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivb_copyWebsite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_copy" />

            <ImageView
                android:id="@+id/ivb_websiteShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:srcCompat="@android:drawable/ic_menu_share" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView40"
            style="@style/LineTextView"
            android:layout_margin="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"

                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="TODO"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_email"
                app:tint="#C35858" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:text="E-MAIL"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_emailData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Openinnovationpayment@gmail.com"
                    android:textColor="#C35858" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivb_copyEmail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_copy" />

            <ImageView
                android:id="@+id/ivb_emailShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:srcCompat="@android:drawable/ic_menu_share" />

        </LinearLayout>

        <TextView
            style="@style/LineTextView"
            android:layout_margin="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_helpCall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_phone_number"
                app:tint="#558B2F" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:text="CALL"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_callData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 8934912342"
                    android:textColor="#558B2F" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivb_copyCall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_copy" />

            <ImageView
                android:id="@+id/ivb_callShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:srcCompat="@android:drawable/ic_menu_share" />

        </LinearLayout>

        <TextView
            style="@style/LineTextView"
            android:layout_margin="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_location"
                app:tint="#9E9E16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:text="Our Location"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_locationData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F-5 Software Technology Parks Of India Jodhpur 342003"
                    android:textColor="#9E9E16" />


            </LinearLayout>

            <ImageView
                android:id="@+id/ivb_copyLocation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_copy" />

            <ImageView
                android:id="@+id/ivb_locationShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:srcCompat="@android:drawable/ic_menu_share" />

        </LinearLayout>

        <TextView
            style="@style/LineTextView"
            android:layout_margin="0dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>