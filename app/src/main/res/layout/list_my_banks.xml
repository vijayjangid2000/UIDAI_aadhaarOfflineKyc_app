<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_layout"
    android:layout_width="@dimen/dim_300"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_light_gray_10"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="left"
            android:text="Id"
            android:textColor="@color/text_color_2"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Bank Name"
            android:textColor="@color/text_color_2"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_beneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/text_color_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ifsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ifsc"
            android:textColor="@color/text_color_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_accountNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Account"
            android:textColor="@color/text_color_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_branch_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Branch Name"
            android:textColor="@color/text_color_2"
            android:textSize="14sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#DAD4D4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_light_blue_5"
            android:gravity="center"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_status"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_light_blue_5"
            android:gravity="center"
            android:text="Success"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_red_5"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:text="Verify"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </RelativeLayout>


</LinearLayout>
